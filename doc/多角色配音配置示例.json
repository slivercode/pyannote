  "usage_python": {
    "description": "Python代码使用示例",
    "code": [
      "import json",
      "from scripts.tts_dubbing_processor import TTSDubbingProcessor",
      "",
      "# 加载配置文件",
      "with open('多角色配音配置示例.json', 'r', encoding='utf-8') as f:",
      "    config = json.load(f)",
      "",
      "# 选择一个示例配置",
      "role_data = config['example_1_three_speakers']",
      "# 移除description和note字段",
      "role_data = {k: {kk: vv for kk, vv in v.items() if kk not in ['note', 'description']} ",
      "             for k, v in role_data.items() if k != 'description'}",
      "",
      "# 创建处理器",
      "processor = TTSDubbingProcessor(",
      "    srt_path='input_with_speakers.srt',",
      "    output_dir='output',",
      "    engine='gpt-sovits',",
      "    role_data=role_data,",
      "    api_url='http://localhost:9880',",
      "    auto_align=True,",
      ")",
      "",
      "# 执行配音",
      "result = processor.process()",
      "print(f'配音完成: {result}')"
    ]
  },
  
